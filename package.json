{
  "name": "dittotones",
  "version": "0.6.0",
  "type": "module",
  "description": "Transform any color into a full palette by copying the perceptual DNA of Tailwind, Radix, and other design systems",
  "scripts": {
    "dev": "vite",
    "build": "tsc --emitDeclarationOnly --declaration --outDir dist && vite build",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview": "vite preview --config vite.demo.config.ts --outDir dist-demo"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./ramps/tailwind": {
      "import": "./dist/ramps/tailwind.js",
      "require": "./dist/ramps/tailwind.cjs",
      "types": "./dist/ramps/tailwind.d.ts"
    },
    "./ramps/radix": {
      "import": "./dist/ramps/radix.js",
      "require": "./dist/ramps/radix.cjs",
      "types": "./dist/ramps/radix.d.ts"
    }
  },
  "files": [
    "dist",
    "src/ramps"
  ],
  "devDependencies": {
    "@types/culori": "^4.0.1",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "dependencies": {
    "culori": "^4.0.2"
  }
}
